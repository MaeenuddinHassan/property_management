@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Properties - Property Management App</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <header>
        <!-- Include layout header here -->
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <section id="properties" class="featured-properties">
                <div class="container">
                    <h2>Featured Properties</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Sample Property 1</td>
                                <td>Description of Sample Property 1</td>
                                <td><img src="/images/property1.jpg" alt="Property 1" class="img-thumbnail" /></td>
                                <td>$500,000</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Sample Property 2</td>
                                <td>Description of Sample Property 2</td>
                                <td><img src="/images/property2.jpg" alt="Property 2" class="img-thumbnail" /></td>
                                <td>$750,000</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Sample Property 3</td>
                                <td>Description of Sample Property 3</td>
                                <td><img src="/images/property3.jpg" alt="Property 3" class="img-thumbnail" /></td>
                                <td>$1,200,000</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>

    <footer>
        <!-- Include layout footer here -->
    </footer>

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
</body>
</html>
